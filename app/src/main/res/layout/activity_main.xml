<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="285dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:text="@string/ColorCodeGenerate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="211dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:text="@string/pin_texz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <LinearLayout
        android:id="@+id/linearLayout_checkboxen_ID"
        android:layout_width="210dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <CheckBox
            android:id="@+id/checkBoxAID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_A" />

        <CheckBox
            android:id="@+id/checkBoxBID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_B" />

        <CheckBox
            android:id="@+id/checkBoxCID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_C" />

        <CheckBox
            android:id="@+id/checkBoxDID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_D" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="403dp"
        android:layout_height="72dp"
        android:background="@color/darkgrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <TextView
            android:id="@+id/textViewA_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_A"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewB_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_B"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewC_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewD_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_D"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="159dp"
        android:layout_height="21dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="148dp"
        android:text="@string/ColorCodeGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="98dp"
        android:layout_height="21dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="148dp"
        android:text="@string/ColorCodeButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="98dp"
        android:layout_height="197dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="148dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioGroup
            android:id="@+id/radioGroupID"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RadioButton
                android:id="@+id/radioButtonRED_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/rb_red"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonGREEN_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_green"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonBLUE_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_blue"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonYELLOW_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_yellow"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonCYAN_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_cyan"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonMAGENTA_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_magenta"
                tools:ignore="OnClick" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_attemptid"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginTop="484dp"
        android:gravity="center_horizontal"
        android:text="@string/AttempMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counterviewid"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_attemptid" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>