<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".CheckScreen">

    <LinearLayout
        android:id="@+id/checkscreenBoxLayout_ID"
        android:layout_width="415dp"
        android:layout_height="59dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="76dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1BOX_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/textView2BOX_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/textView3BOX_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkgrey" />

        <TextView
            android:id="@+id/textView4BOX_ID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/darkgrey" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="266dp"
        android:layout_height="32dp"

        android:layout_marginTop="44dp"
        android:layout_marginEnd="164dp"
        android:text="@string/colorCodeCheckResults"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFullyCorrectPins_ID"
        android:layout_width="185dp"
        android:layout_height="28dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="336dp"
        android:text="@string/zeropinscorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOnlyColorCorrect_ID"
        android:layout_width="307dp"
        android:layout_height="33dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="216dp"
        android:text="@string/correctcolorbutwrongpos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="284dp"
        android:text="@string/DISMISS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>