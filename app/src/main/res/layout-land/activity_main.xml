<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="21dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="632dp"
        android:text="@string/pin_texz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonColorCode"
        android:layout_width="285dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:onClick="generate_ColorCode"
        android:text="@string/ColorCodeGenerate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_checkboxen_ID"
        android:layout_width="217dp"
        android:layout_height="34dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="96dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonColorCode">

        <CheckBox
            android:id="@+id/checkBoxAID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_A" />

        <CheckBox
            android:id="@+id/checkBoxBID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_B" />

        <CheckBox
            android:id="@+id/checkBoxCID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_C" />

        <CheckBox
            android:id="@+id/checkBoxDID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_D" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorViewsLayout_ID"
        android:layout_width="103dp"
        android:layout_height="289dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="25dp"
        android:background="@color/darkgrey"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewA_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_A"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewB_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_B"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewC_ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_C"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textViewD_ID"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:layout_weight="1"
            android:background="@color/lightgrey"
            android:gravity="center_horizontal"
            android:text="@string/checkBox_D"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="159dp"
        android:layout_height="21dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="124dp"
        android:text="@string/ColorCodeGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="98dp"
        android:layout_height="21dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="80dp"
        android:text="@string/ColorCodeButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="189dp"
        android:layout_marginEnd="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/textview_attemptid"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioGroup
            android:id="@+id/radioGroupID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/radioButtonRED_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_red"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonGREEN_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_green"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonBLUE_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_blue"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonCYAN_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_cyan"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonMAGENTA_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_magenta"
                tools:ignore="OnClick" />

            <RadioButton
                android:id="@+id/radioButtonYELLOW_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/rb_yellow"
                tools:ignore="OnClick" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_attemptid"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="145dp"
        android:gravity="center_horizontal"
        android:text="@string/AttempMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/counterview_ID"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="176dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_attemptid" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/checkScreenButton"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>